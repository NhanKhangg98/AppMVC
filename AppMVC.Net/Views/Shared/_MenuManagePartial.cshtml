@using Microsoft.AspNetCore.Authorization;
@inject IAuthorizationService authorizationService

@{
    var result = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}

@if (result.Succeeded)
{
    <div class="dropdown">
      <a class="btn btn-outline-danger dropdown-toggle" href="#"  id="managedropdownmenu" data-toggle="dropdown" >
        Manage
      </a>

      <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="managedropdownmenu">
        <li><a class="dropdown-item" asp-action="Index" asp-controller="DbManage" asp-area="Database">
            Database
        </a></li>
        <li><a class="dropdown-item" asp-action="Index" asp-controller="Contact" asp-area="Contact">
            Quản lý liên hệ
        </a></li> 
        <li><a class="dropdown-item" asp-action="Index" asp-controller="Role" asp-area="Identity">
            Quản lý role (vai trò)
        </a></li> 
        <li><a class="dropdown-item" asp-action="Index" asp-controller="User" asp-area="Identity">
            Quản lý thành viên
        </a></li> 
        <li><a class="dropdown-item" asp-action="Index" asp-controller="Category" asp-area="Blog">
            Quản lý chuyên mục Blog
        </a></li> 
        
        <li><a class="dropdown-item" asp-action="Index" asp-controller="Post" asp-area="Blog">
            Quản lý bài viết
        </a></li> 
        <li><a class="dropdown-item" asp-action="Index" asp-controller="CategoryProduct" asp-area="Product">
            Quản lý chuyên mục Sản phẩm
        </a></li> 
        <li><a class="dropdown-item" asp-action="Index" asp-controller="ProductManage" asp-area="Product">
            Quản lý Sản phầm
        </a></li>
        <li><a target="_blank" class="dropdown-item" asp-action="Index" asp-controller="FileManager" asp-area="Files">
            Quản lý files
        </a></li>
    
      </ul>
    </div>
}
